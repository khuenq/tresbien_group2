<?xml version="1.0"?>
<config>
    <sections>
        <payment>
            <label>Payment Methods</label>
            <tab>sales</tab>
            <frontend_type>text</frontend_type>
            <sort_order>400</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <paymentpro translate="label" module="paymentpro">
                    <label>
                        <![CDATA[Baokim Payment Solutions&nbsp;-&nbsp;<i>Accept and process credit cards.</i>]]>  </label>
                    <expanded>1</expanded>
                    <frontend_type>text</frontend_type>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <frontend_class>complex</frontend_class>
                    <frontend_model>paymentpro/adminhtml_group</frontend_model>
                    <comment>Safety for all transactions.</comment>
                    <help_url>https://www.baokim.vn/developers/tai-lieu</help_url>
                    <fields>
                        <heading_basic_setting translate="label">
                            <label>Basic Settings</label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </heading_basic_setting>
                        <title translate="label comment ">
                            <label>Title</label>
                            <frontend_type>text</frontend_type>
                            <comment>It is recommended to set this value to "Baokim" per store views.</comment>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </active>
                        <order_status translate="label">
                            <label>New Order Status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_order_status_new</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </order_status>

                        <heading_acc_st translate="label">
                            <label>Configure account</label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </heading_acc_st>
                        <business_account translate="label comment tooltip">
                            <label>Email Associated with Baokim Merchant Account</label>
                            <tooltip>Don't have a Baokim account? Simply enter your email address.</tooltip>
                            <comment><![CDATA[<a href="https://www.baokim.vn">www.baokim.vn</a>]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <sort_order>6</sort_order>
                            <validate>validate-email</validate>
                            <shared>1</shared>
                        </business_account>
                        <secure_pass translate="label comment ">
                            <label>Secure pass</label>
                            <frontend_type>text</frontend_type>
                            <comment>It is recommended to set this value to "Baokim" per store views.</comment>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </secure_pass>
                        <test_mode translate="label comment tooltip">
                            <label>Use test mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </test_mode>
                        <heading_api translate="label">
                            <label>Advanced Settings - Account API </label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
                            <sort_order>29</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </heading_api>
                        <api_username translate="label comment tooltip">
                            <label>API Username</label>
                            <frontend_type>text</frontend_type>
                            <!--<backend_model>adminhtml/system_config_backend_encrypted</backend_model>-->
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <shared>1</shared>
                        </api_username>
                        <api_password translate="label comment tooltip">
                            <label>API Password</label>
                            <frontend_type>text</frontend_type>
                            <!--<backend_model>adminhtml/system_config_backend_encrypted</backend_model>-->
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <shared>1</shared>
                        </api_password>
                        <api_signature translate="label comment tooltip">
                            <label>API Signature</label>
                            <!--<backend_model>adminhtml/system_config_backend_encrypted</backend_model>-->
                            <frontend_type>textarea</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <shared>1</shared>
                        </api_signature>
                        <payment_method translate="label comment tooltip">
                            <label>Immediate payments method</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>51</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </payment_method>
                    </fields>
                </paymentpro>
            </groups>
        </payment>
    </sections>
</config>