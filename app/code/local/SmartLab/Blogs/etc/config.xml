            <smartlab_blogs>
                <class>SmartLab_Blogs_Block</class>
            </smartlab_blogs>
        </blocks>
        <helpers>
            <blogs>
                <class>SmartLab_Blogs_Helper</class>
            </blogs>
        </helpers>
        <resources>
            <smartlab_blogs_setup>
                <setup>
                    <module>SmartLab_Blogs</module>
                </setup>
            </smartlab_blogs_setup>
            <blogs_write>
                <connection>
                    <use>core_write</use>
