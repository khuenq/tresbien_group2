                </blogs>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <smartlab_blogs>
                <class>SmartLab_Blogs_Model</class>
                <resourceModel>smartlab_blogs_resource</resourceModel>
            </smartlab_blogs>
