<?xml version="1.0"?>
<config>
    <modules>
        <SmartLab_Blogs>
            <version>0.1.0</version>
        </SmartLab_Blogs>
    </modules>
    <frontend>
        <routers>
            <blogs>
                <use>standard</use>
                <args>
                    <module>SmartLab_Blogs</module>
                    <frontName>blogs</frontName>
                </args>
            </blogs>
        </routers>
        <layout>
            <updates>
                <blogs>
                    <file>blogs.xml</file>
                </blogs>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <blogs>
                <class>SmartLab_Blogs_Model</class>
                <resourceModel>blogs_resource</resourceModel>
            </blogs>
            <blogs_resource>
                <class>SmartLab_Blogs_Model_Resource</class>
                <entities>
                    <customerpost>
                        <table>neotheme_customer_post</table>
                    </customerpost>
                    <tagpost>
                        <table>neotheme_tag_post</table>
                    </tagpost>
                    <tag>
                        <table>neotheme_blog_tag</table>
                    </tag>
                </entities>
            </blogs_resource>
        </models>
        <resources>
            <blogs_setup>
                <setup>
                    <module>SmartLab_Blogs</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </blogs_setup>
            <blogs_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </blogs_write>
            <blogs_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </blogs_read>
        </resources>
        <blocks>
            <smartlab_blogs>
                <class>SmartLab_Blogs_Block</class>
            </smartlab_blogs>
        </blocks>
        <helpers>
            <blogs>
                <class>SmartLab_Blogs_Helper</class>
            </blogs>
        </helpers>
        <events>
        <controller_action_postdispatch_neotheme_blog_post_index>
            <observers>
                <blog_observer_post_tag>
                    <class>SmartLab_Blog_Model_Observer</class>
                    <method>hookIntoPostTag</method>
                </blog_observer_post_tag>
            </observers>
        </controller_action_postdispatch_neotheme_blog_post_index>
    </events>
    </global>
</config>